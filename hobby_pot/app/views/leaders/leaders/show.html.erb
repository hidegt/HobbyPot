      <!--    % @all_circles.each.with_index(1) do |all_circle, i| %>-->
      <!--      <div class="row row_zoom">-->
      <!--        <p class=col-12>第%= i %>位</p><br>-->
      <!--        %= render 'common/circle_top', circle: all_circle %>-->
      <!--      </div>-->
      <!--    % end %>-->
      <!--  </div>-->
      <!--</div>-->
    </div>
  </div>
</div>
