<!DOCTYPE html>
<html>
  <head>
    <title>HobbyPot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul class="nav justify-content-end">
          <% if user_signed_in? %>
            <li class="nav-item">ようこそ<br><%= current_user.name %>さん</li>
            <li class="nav-item"><a class="nav-link" href="#">マイページ</a></li>
            <li class="nav-item"><a class="nav-link" href="#">お気に入り</a></li>
            <li class="nav-item"><a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">参加履歴</a></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          <% elsif leader_signed_in? %>
            <li class="nav-item">ようこそ<br><%= current_leader.circle_name %><br><%= current_leader.name %>さん</li>
            <li class="nav-item"><a class="nav-link" href="#">マイページ</a></li>
            <li class="nav-item"><a class="nav-link" href="#">サークル一覧</a></li>
            <li class="nav-item"><a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">イベント作成</a></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_leader_session_path, method: :delete %></li>
          <% else %>
            <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
            <li class="nav-item"><a class="nav-link" href="#lineup">Line Up</a></li>
            <li><%= link_to "サークルに参加する", new_user_registration_path, class:"nav-link" %></li>
            <li><%= link_to "サークルを作る", new_leader_registration_path, class:"nav-link" %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
