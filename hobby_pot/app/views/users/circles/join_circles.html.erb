<div class="container">
  <div class="row justify-content-center m-3 p-3">
    <h2 class="top-border"><%= @circle.circle_title %>参加者一覧</h2>
  </div>
  <% if @circle.joined_users.present? %>
    <% @circle.joined_users.each do |user| %>
        <div class="row justify-content-around">
          <%= link_to user_path(user.id), class:"text-decoration-none" do %>
            <%= attachment_image_tag user, :user_image, size: "80x80", class:"border border-secondary rounded-circle", fallback: "no-image-icon.jpg" %>
            <div class="blog col-1 text-dark py-2"><%= user.name %></div>
          <% end %>
        </div>
    <% end %>
  <% else %>
   <div class="row justify-content-center">参加者はまだいません</div>
  <% end %>
