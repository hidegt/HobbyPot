<div class="container">
  <div class="row justify-content-center m-3 p-3">
    <h1 class="top-border">新規投稿<h1>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @circle, url: leaders_circle_path, local:true do |f| %>
      <% if @circle.errors.any? %>
        <%= @circle.errors.count %>件のエラーが発生しました
        <% @circle.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= render 'leaders/circles/circleform', circle: @circle, category_list: @category_list, f: f %>
      <div class="actions my-5">
        <%= f.submit "更新する", class:"signup_btn my-5" %>
        <%= link_to "削除", leaders_circle_path(@circle), method: :delete, class:"btn btn-primary taikai_btn my-auto", "data-confirm" => "このイベントを完全に削除します。よろしいですか？" %>
      </div>
    <% end %>
  </div>
</div>

