<% if user_signed_in? %>
  <% if circle.favorited_by?(current_user) %>
    <div class="col-md-2 offset-md-9">
      <%= link_to circle_favorites_path(circle), method: :delete, class:"btn-hart", remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <% end %>
    </div>
  <% else %>
    <div class="col-md-2 offset-md-9">
      <%= link_to circle_favorites_path(circle), method: :post, class:"btn-hart", remote: true do %>
        <i class="fa fa-heart-o text-dark" aria-hidden="true"></i>
      <% end %>
    </div>
  <% end %>
<% end %>
